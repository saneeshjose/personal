<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/editTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="24dp"
        android:ems="14"
        />

    <TextView
        android:id="@+id/txtRepeats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTask"
        android:layout_below="@+id/editTask"
        android:layout_marginTop="27dp"
        android:text="@string/str_activity_task_detail_repeats" 
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <Spinner
        android:id="@+id/spnFrequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtRepeats"
        android:layout_marginLeft="36dp"
        android:layout_toRightOf="@+id/txtRepeats" />
    
     <TextView
        android:id="@+id/txtDueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtRepeats"
        android:layout_below="@+id/txtRepeats"
        android:layout_marginTop="49dp"
        android:text="@string/str_activity_task_detail_start_date"
        android:textAppearance="?android:attr/textAppearanceMedium" />
     
    <EditText
        android:id="@+id/editDueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRepeats"
        android:layout_alignLeft="@+id/spnFrequency"
        android:layout_alignBaseline="@+id/txtDueDate"
        android:ems="8"
        android:editable="false"
        android:inputType="date" />
